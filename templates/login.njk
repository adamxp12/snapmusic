<!doctype html>
<html class="no-js" lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SnapMusic</title>
    <link rel="stylesheet" href="/public/css/foundation.min.css">
    <link rel="stylesheet" href="/public/css/app.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400" rel="stylesheet"> 
  </head>
  <body>
    <div class="login">

        <div class="row">
          <div class="column"><h1 class="text-center">SnapMusic</h1></div>
        </div>

        <div class="row">
            <div class="column"><p class="text-center">Welcome to SnapMusic. login below to access your music</p></div>
        </div>

        <div class="row align-center">
            <div class="column medium-6">
                <input type="text" placeholder="Username">
                <input type="password" placeholder="Password">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="submit" class="button hollow success expanded" value="Login">
            </div>
        </div>
        
    </div>
    <script src="/public/js/vendor/jquery.js"></script>
    <script src="/public/js/vendor/what-input.js"></script>
    <script src="/public/js/vendor/foundation.min.js"></script>
    <script>$(document).foundation()</script>
  </body>
</html>
